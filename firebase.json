{
  "hosting": {
    "public": "docs",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cross-Origin-Embedder-Policy",
            "value": "require-corp"
          },
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": "same-origin"
          }
        ]
      },
      {
        "source": "/gdrive/index.html",
        "headers": [
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": "same-origin-allow-popups"
          }
        ]
      },
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|woff2|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "**/*.@(css|jpg|jpeg|gif|png|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      },
      {
        "source": "**/assets/@(audio|board|fonts|icons|pieces|stockfish)/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000,immutable"
          }
        ]
      },
      {
        "source": "404.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=300"
          }
        ]
      },
      {
        "source": "/sitemap.xml",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/xml"
          },
          {
            "key": "Cross-Origin-Embedder-Policy",
            "value": null
          },
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": null
          }
        ]
      },
      {
        "source": "/robots.txt",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/plain"
          },
          {
            "key": "Cross-Origin-Embedder-Policy",
            "value": null
          },
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": null
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/siteamp.xml",
        "destination": "/siteamp.xml"
      },
      {
        "source": "/robots.txt",
        "destination": "/robots.txt"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/home",
        "destination": "/index.html"
      },
      {
        "source": "/about",
        "destination": "/index.html"
      },
      {
        "source": "/list/**",
        "destination": "/index.html"
      },
      {
        "source": "/position/**",
        "destination": "/index.html"
      },
      {
        "source": "/fen/**",
        "destination": "/index.html"
      }
    ]
  }
}